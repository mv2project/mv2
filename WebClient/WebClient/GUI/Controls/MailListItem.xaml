<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="ISS.MV2.GUI.Controls.MailListItem"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" >
        <StackPanel Margin="10,10,10,10">
                <TextBlock x:Name="subjectText"  HorizontalAlignment="Stretch" TextTrimming="WordEllipsis" FontSize="13" FontWeight="Bold">
					<Run Text="[Subject]"/>
                </TextBlock>
            <sdk:Label Content="[SENDER]" FontStyle="Italic" x:Name="senderLabel" />
        </StackPanel>
    </Grid>
</UserControl>
